{
  "manifestVersion": 5,
  "id": "awt.xms.photoshop",
  "name": "Angular UXP 插件",
  "version": "1.0.0",
  "main": "index.html",
  "host": [
    {
      "app": "PS",
      "minVersion": "23.3.0",
      "data" : {
        "apiVersion": 2,
        "loadEvent": "use",
        "enableMenuRecording": true
      }
    }
  ],
  "requiredPermissions": {
    "webview": {
      "allow": "yes",
      "domains": [
        "http://127.0.0.1:4200"
      ],
      "enableMessageBridge": "localAndRemote"
    }
  },
  "entryPoints": [
    {
      "type": "panel",
      "id": "angularPanel",
      "label": {
        "default": "Angular UXP 面板"
      },
      "minimumSize": { "width": 200, "height": 200 },
      "maximumSize": { "width": 400, "height": 600 }
    }
  ],
  "icons": [
    {
      "width": 48,
      "height": 48,
      "path": "icons/plugin.png",
      "scale": [1, 2],
      "theme": ["darkest", "dark", "light", "lightest"]
    }
  ]
}
